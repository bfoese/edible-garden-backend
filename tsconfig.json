{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@eg-domain-constants/*": ["src/domain-constants/*"],
      "@eg-domain/*": ["src/domain/*"],
      "@eg-app-config/*": ["src/application/config/*"],
      "@eg-database/*": ["src/database/*"],
      "@eg-presentation-facade/*": ["src/presentation/facade/*"],
      "@eg-rest-api/*": ["src/presentation/rest-api/*"],
      "@eg-data-access/*": ["src/data-access/*"],
      "@eg-common/*": ["src/common/*"],
      "@eg-core/*": ["src/core/*"],
      "@eg-persistence/*": ["src/persistence/*"]
    },
    "incremental": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "dist"]
}

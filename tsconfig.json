{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@eg-types-persistence/*": ["src/types-persistence/*"],
      "@eg-types-api/*": ["src/types-api/*"],
      "@eg-data-access/*": ["src/data-access/*"],
      "@eg-common/*": ["src/common/*"],
      "@eg-core/*": ["src/core/*"],
      "@eg-peristence/*": ["src/persistence/*"],
      "@eg-botanical-family/*": ["src/botanical-family/*"],
      "@eg-botanical-species/*": ["src/botanical-species/*"]
    },
    "incremental": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", "dist"]
}

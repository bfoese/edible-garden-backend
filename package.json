{
    "name": "edible-garden-backend",
    "private": true,
    "version": "1.0.0",
    "description": "",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "cross-env NODE_ENV=development nest start --watch",
        "start:dev:prod": "cross-env NODE_ENV=production nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
        "test": "jest --passWithNoTests --bail",
        "test:quick": "jest --passWithNoTests --bail â€”-findRelatedTests",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli -f dist/database/config/ormconfig.js",
        "migration:create": "npm run typeorm:cli -- migration:create",
        "migration:generate": "npm run typeorm:cli -- migration:generate",
        "migration:run": "npm run typeorm:cli -- migration:run",
        "migration:revert": "npm run typeorm:cli -- migration:revert",
        "schema:log": "npm run typeorm:cli -- schema:log",
        "schema:drop": "npm run typeorm:cli -- schema:drop",
        "migration:show": "npm run typeorm:cli -- migration:show"
    },
    "dependencies": {
        "@nestjs/common": "^7.5.1",
        "@nestjs/config": "^0.5.0",
        "@nestjs/core": "^7.5.1",
        "@nestjs/platform-express": "^7.5.1",
        "@nestjs/swagger": "^4.6.1",
        "@nestjs/typeorm": "^7.1.4",
        "class-transformer": "^0.3.1",
        "class-validator": "^0.12.2",
        "dotenv-flow": "^3.2.0",
        "express-rate-limit": "0.0.0-typescript-beta-7",
        "faker": "^5.1.0",
        "joi": "^17.3.0",
        "nestjs-config": "^1.4.7",
        "path": "^0.12.7",
        "pg": "^8.4.2",
        "reflect-metadata": "^0.1.13",
        "rimraf": "^3.0.2",
        "rxjs": "^6.6.3",
        "swagger-ui-express": "^4.1.4",
        "typeorm": "^0.2.29"
    },
    "devDependencies": {
        "@nestjs/cli": "^7.5.1",
        "@nestjs/schematics": "^7.1.3",
        "@nestjs/testing": "^7.5.5",
        "@types/express": "^4.17.8",
        "@types/faker": "^5.1.5",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.6",
        "@types/supertest": "^2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.6.1",
        "@typescript-eslint/parser": "^4.6.1",
        "cross-env": "^7.0.2",
        "eslint": "^7.12.1",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-import": "^2.20.2",
        "eslint-plugin-jest": "^23.9.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-security": "^1.4.0",
        "eslint-plugin-tsdoc": "^0.2.4",
        "jest": "^26.6.3",
        "lint-staged": "^10.2.2",
        "prettier": "^2.1.2",
        "supertest": "^6.0.1",
        "ts-jest": "^26.4.3",
        "ts-loader": "^8.0.9",
        "ts-node": "^9.0.0",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.0.5",
        "@commitlint/cli": "9.1.1",
        "@commitlint/config-conventional": "9.1.1",
        "commitizen": "^4.2.2",
        "cz-conventional-changelog": "^3.3.0",
        "husky": "^4.3.0",
        "standard-version": "^9.0.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged",
            "pre-push": "npm run test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "lint-staged": {
        "*.ts": [
            "eslint --cache --fix",
            "npm run test:quick",
            "prettier --write"
        ]
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    },
    "bugs": {
        "url": "https://github.com/bfoese/edible-garden-backend/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/bfoese/edible-garden-backend.git"
    },
    "homepage": "https://github.com/bfoese/edible-garden-backend",
    "standard-version": {
        "types": [{
                "type": "feat",
                "section": "Features"
            },
            {
                "type": "fix",
                "section": "Bug Fixes"
            },
            {
                "type": "chore",
                "hidden": true
            },
            {
                "type": "ci",
                "hidden": true
            },
            {
                "type": "build",
                "hidden": true
            },
            {
                "type": "docs",
                "hidden": true
            },
            {
                "type": "style",
                "hidden": true
            },
            {
                "type": "refactor",
                "hidden": true
            },
            {
                "type": "perf",
                "hidden": true
            },
            {
                "type": "test",
                "hidden": true
            }
        ],
        "header": "Changelog",
        "commitUrlFormat": "{{host}}/{{owner}}/{{repository}}/commit/{{hash}}",
        "compareUrlFormat": "{{host}}/{{owner}}/{{repository}}/compare/{{previousTag}}...{{currentTag}}",
        "issueUrlFormat": "{{host}}/{{owner}}/{{repository}}/issues/{{id}}",
        "userUrlFormat": "{{host}}/{{user}}",
        "releaseCommitMessageFormat": "chore(release): {{currentTag}}",
        "issuePrefixes": [
            "#"
        ]
    }
}